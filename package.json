{
	"name": "buddy-lifts",
	"private": true,
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"dotenv": "^17.2.2",
			"zod": "^4.1.13",
			"typescript": "^5",
			"next": "16.1.4",
			"@trpc/server": "^11.7.2",
			"@trpc/client": "^11.7.2",
			"better-auth": "^1.4.9",
			"drizzle-orm": "0.45.1",
			"@types/pg": "^8.16.0"
		}
	},
	"type": "module",
	"scripts": {
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"db:push": "turbo -F @buddy-lifts/db db:push",
		"db:studio": "turbo -F @buddy-lifts/db db:studio",
		"db:generate": "turbo -F @buddy-lifts/db db:generate",
		"db:migrate": "turbo -F @buddy-lifts/db db:migrate",
		"check": "biome check --write .",
		"test": "turbo test",
		"prepush": "bun run check && turbo run check-types build",
		"prepare": "husky"
	},
	"dependencies": {
		"@buddy-lifts/env": "workspace:*",
		"@supabase/ssr": "^0.8.0",
		"@supabase/supabase-js": "^2.91.1",
		"date-fns": "^4.1.0",
		"dotenv": "catalog:",
		"drizzle-orm": "0.45.1",
		"nanoid": "^5.1.6",
		"next": "16.1.4",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.0",
		"@buddy-lifts/config": "workspace:*",
		"@types/node": "^22.13.14",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"turbo": "^2.6.3",
		"typescript": "catalog:"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write ."
		]
	},
	"overrides": {
		"drizzle-orm": "0.45.1",
		"next": "16.1.4"
	},
	"packageManager": "bun@1.3.1"
}
